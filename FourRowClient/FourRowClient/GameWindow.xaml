<Window x:Class="FourRowClient.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FourRowClient"
        mc:Ignorable="d"
        Title="four row game window" Height="450" Width="800" ResizeMode="NoResize">
	<DockPanel DockPanel.Dock="Bottom" Name="BoardPanel">
		<Canvas Height="300" Width="350" Background="Blue">
			<Border BorderBrush="Black" BorderThickness="2">
				<Grid x:Name="innerGrid">
					<Border BorderBrush="Black" BorderThickness="2" Grid.ColumnSpan="7"/>
					<Border BorderBrush="Black" BorderThickness="2" Grid.Row="1"  Grid.ColumnSpan="7"/>
					<Border BorderBrush="Black" BorderThickness="2" Grid.Row="2" Grid.ColumnSpan="7"/>
					<Border BorderBrush="Black" BorderThickness="2" Grid.Row="3" Grid.ColumnSpan="7"/>
					<Border BorderBrush="Black" BorderThickness="2" Grid.Row="4" Grid.ColumnSpan="7"/>
					<Border BorderBrush="Black" BorderThickness="2" Grid.Row="5" Grid.ColumnSpan="7"/>
					<Border BorderBrush="Black" BorderThickness="2" Grid.Row="6" Grid.ColumnSpan="7"/>

					<Border BorderBrush="Black" BorderThickness="2" Grid.RowSpan="7"/>
					<Border BorderBrush="Black" BorderThickness="2" Grid.Column="1" Grid.RowSpan="7"/>
					<Border BorderBrush="Black" BorderThickness="2" Grid.Column="2" Grid.RowSpan="7"/>
					<Border BorderBrush="Black" BorderThickness="2" Grid.Column="3" Grid.RowSpan="7"/>
					<Border BorderBrush="Black" BorderThickness="2" Grid.Column="4" Grid.RowSpan="7"/>
					<Border BorderBrush="Black" BorderThickness="2" Grid.Column="5" Grid.RowSpan="7"/>
					<Border BorderBrush="Black" BorderThickness="2" Grid.Column="6" Grid.RowSpan="7"/>





					<Ellipse Fill="{Binding BoardLocationColors[0]}" Name="Cell00" Grid.Row="0" Grid.Column="0"  Stroke="Black"></Ellipse>
					<Button Grid.Row="0" Grid.Column="0" Click="ButtonClick" Opacity="0" IsEnabled="{Binding IsBoardEnabled}"/>
					<Ellipse Name="Cell01" Grid.Row="0" Grid.Column="1" Fill="{Binding BoardLocationColors[1]}" Stroke="Black"></Ellipse>
					<Button Grid.Row="0" Grid.Column="1" Click="ButtonClick" Opacity="0" IsEnabled="{Binding IsBoardEnabled}"/>
					<Ellipse Name="Cell02" Grid.Row="0" Grid.Column="2" Fill="{Binding BoardLocationColors[2]}" Stroke="Black"></Ellipse>
					<Button Grid.Row="0" Grid.Column="2" Click="ButtonClick" Opacity="0" IsEnabled="{Binding IsBoardEnabled}"/>
